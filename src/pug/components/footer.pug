mixin column1(item, link)
	li(class="main-footer__li"): a(href=link target='_blank' class='foot-icon')=item

mixin column2(item, link)
	li(class="main-footer__li"): a(href=link target='_blank' class='foot-icon')=item

mixin column3(item, link)
	li(class="main-footer__li"): a(href=link target='_blank' class='foot-icon')=item

mixin connect(icon, link, alt)
	li(class="main-footer__li") 
		a(href=link target='_blank')
			img(src=icon, alt=alt)

div(class="ed-container s-center main-footer__top")
	a(class='ed-item' href='./')
		img(src='assets/img/logo-fanattic.jpg', alt='' class="top-nav__logo")
	a(class='ed-item' href="")  email us: support@fanattic.bet
div(class='ed-grid m-grid-2 lg-grid-4 row-gap main-footer__content')
	ul(class="main-footer__ul").data-list
		-for(var i = 0; i < column1.length ; i++)
			-var item = column1[i]
			+column1(item.item, item.link)
	ul(class="main-footer__ul").data-list
		-for(var i = 0; i < column2.length ; i++)
			-var item = column2[i]
			+column2(item.item, item.link)
	ul(class="main-footer__ul").data-list
		-for(var i = 0; i < column3.length ; i++)
			-var item = column3[i]
			+column3(item.item, item.link)
	ul(class="main-footer__ul").data-list
		h4 Connect
		div(class="main-footer__connect--container") 
			-for(var i = 0; i < connect.length ; i++)
				-var item = connect[i]
				+connect(item.icon, item.link)

