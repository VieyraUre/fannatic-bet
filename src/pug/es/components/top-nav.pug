mixin list(item, link)
	li(class='top-nav__li'): a(href=link, class='top-nav__anchor')=item

mixin connect(icon, link, alt)
	li(class="top-nav__connect--li") 
		a(href=link target='_blank')
			img(src=icon, alt=alt)
