	div(class='top-nav__container')
		button(type='button', aria-label="hamburguer menu" class='top-nav__mb-iconMenu hamburger hamburger--slider-r display')
			span.hamburger-box
				span.hamburger-inner
		a(href='./', class='top-nav__link')
			img(src='../assets/img/fanattic.bet_logo.png', alt='fannatic logo', class='top-nav__logo')
		ul(class='top-nav__menu')
			-for(var i = 0; i < list.length ; i++)
				-var item = list[i]
				+list(item.item, item.link)
			div(class="top-nav__connect--container")
				ul(class="top-nav__connect--list") 
					-for(var i = 0; i < connectHamburguer.length ; i++)
						-var item = connectHamburguer[i]
						+connect(item.icon, item.link, item.alt)

